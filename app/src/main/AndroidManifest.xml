<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.schroeder17.randomnumbergenerator" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Random_Number_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Answer_Activity"
            android:label="@string/title_activity_answer_"
            android:parentActivityName=".Random_Number_Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.schroeder17.randomnumbergenerator.Random_Number_Activity" />
        </activity>
    </application>

</manifest>
